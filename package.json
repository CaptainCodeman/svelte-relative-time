{
  "name": "svelte-relative-time",
  "description": "Efficient, lightweight, auto-updating timeago timestamps for Svelte",
  "version": "0.0.4",
  "type": "module",
  "keywords": [
    "svelte",
    "component",
    "ui",
    "action",
    "time",
    "date",
    "datetime",
    "timestamp",
    "timeago",
    "relative",
    "relative-time"
  ],
  "homepage": "https://captaincodeman.github.io/svelte-relative-time/",
  "repository": {
    "type": "git",
    "url": "https://github.com/captaincodeman/svelte-relative-time.git"
  },
  "author": {
    "name": "Simon Green",
    "email": "simon@captaincodeman.com",
    "url": "https://www.captaincodeman.com/"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "svelte": "^3.54.0 || ^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.20.4",
    "@sveltejs/package": "^2.0.2",
    "@types/node": "^18.16.18",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "publint": "^0.1.12",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.4",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  }
}

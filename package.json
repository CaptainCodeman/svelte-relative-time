{
	"name": "svelte-relative-time",
	"description": "Efficient, lightweight, auto-updating timeago timestamps for Svelte",
	"version": "0.0.5",
	"type": "module",
	"keywords": [
		"svelte",
		"component",
		"ui",
		"action",
		"time",
		"date",
		"datetime",
		"timestamp",
		"timeago",
		"relative",
		"relative-time"
	],
	"homepage": "https://captaincodeman.github.io/svelte-relative-time/",
	"repository": {
		"type": "git",
		"url": "https://github.com/captaincodeman/svelte-relative-time.git"
	},
	"author": {
		"name": "Simon Green",
		"email": "simon@captaincodeman.com",
		"url": "https://www.captaincodeman.com/"
	},
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^3.54.0 || ^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.5.7",
		"@sveltejs/package": "^2.3.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/node": "^20.12.7",
		"autoprefixer": "^10.4.19",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"publint": "^0.2.7",
		"svelte": "^4.2.15",
		"svelte-check": "^3.7.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.10"
	}
}